
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read/write their own user document.
    // Admins have full access through server-side actions, not these rules.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null;
    }

    // A user can only create, read, or write their own state document.
    match /userStates/{userId} {
      // Allow any authenticated user to read all states for the real-time dashboard.
      allow get, list: if request.auth != null;
      allow create, update, delete: if isOwner(userId);
    }
    
    // Activity logs are created by server actions. No client access.
    match /activity/{logId} {
      allow read, write: if false;
    }

    // Timesheet entries are created by server actions.
    // Allow users to read their own entries for the timesheet page.
    match /timesheet/{entryId} {
      allow read: if request.auth.uid == resource.data.uid;
      allow create, update, delete: if false;
    }
    
    // Overbreaks are created by server actions. No client access.
    match /overbreaks/{overbreakId} {
       allow read, write: if false;
    }
  }
}
