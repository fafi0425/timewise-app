rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only manage their own user document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow user creation for sign-up process.
      allow create: if request.auth != null;
    }
    
    // A user can only read and write their own real-time state document.
    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can only create their own activity logs.
    match /activity/{activityId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      // Reading activity logs for others is handled by secure server actions.
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    
    // Overbreaks are only read by secure server actions. No client access.
    match /overbreaks/{overbreakId} {
       allow read: if false;
       allow list: if false;
       allow write: if false;
    }
    
    // A user can only create and read their own timesheet entries.
    match /timesheet/{entryId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
  }
}
