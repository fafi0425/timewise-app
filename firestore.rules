
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // Admins or users can create their own profile
    }

    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /activity/{activityId} {
      allow read, write: if request.auth != null; // More specific rules can be added here
    }

    match /timesheet/{timesheetId} {
      allow read, write: if request.auth != null;
    }

    match /overbreaks/{overbreakId} {
      // Allow authenticated users to read all overbreak alerts
      allow read: if request.auth != null;
      // Allow a user to create their own overbreak log
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

  }
}
