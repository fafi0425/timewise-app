
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Any authenticated user can create a user (for sign-up).
      allow create: if request.auth != null;
      // Users can read/update their own data.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /userStates/{userId} {
      // Any authenticated user can read user states for real-time dashboards.
      allow read: if request.auth != null;
      // A user can only write to their own state document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /activity/{activityId} {
      // A user can only create their own activity logs.
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      // Activity logs are not read directly by clients.
      allow read: if false;
    }
    
    match /overbreaks/{overbreakId} {
       // Any authenticated user can read the overbreaks collection for real-time alerts.
       allow read: if request.auth != null;
    }
    
    match /timesheet/{entryId} {
      // A user can only create their own timesheet entries.
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      // Timesheet data is read via secure server actions, not directly.
      allow read: if false;
    }
  }
}
