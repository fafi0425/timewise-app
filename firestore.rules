
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read their own profile
    match /users/{userId} {
      allow read: if isSignedIn() && isOwner(userId);
      // All writes are handled by secure server-side functions
      allow write: if false; 
    }
    
    match /userStates/{userId} {
        // Users can only read and write to their OWN state document
        allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Activity, Overbreaks, and Timesheet are write-only from the client.
    // Client logs its own actions, but cannot read any logs.
    // All reading of these collections is done via secure server actions.
    match /activity/{docId} {
      allow read: if false;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    match /overbreaks/{docId} {
      allow read: if false;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
    
    match /timesheet/{docId} {
      allow read: if false;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}
