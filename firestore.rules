
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow admins to read/write all data
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrator';
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId; // Users can update their own profile
      allow create: if request.auth != null; // New users can be created
    }

    match /userStates/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /activity/{docId} {
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    match /timesheet/{docId} {
       allow create: if request.auth.uid == request.resource.data.uid;
       allow read: if request.auth.uid == resource.data.uid;
    }
    
    match /overbreaks/{docId} {
      allow list: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.uid;
    }
  }
}
