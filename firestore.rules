rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Controls access to user state documents
    match /userStates/{userId} {
        allow read, write: if request.auth.uid == userId;
    }

    // Logged-in users can add activity logs.
    // Reading logs is handled by a backend function for admins.
    match /activity/{docId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid == resource.data.uid;
    }

    // Allow users to query their own timesheet entries
    match /timesheet/{docId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid == resource.data.uid;
      allow list: if request.auth.uid == request.query.wheres[0][2];
    }
  }
}
