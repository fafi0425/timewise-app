rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to create a new user document (on signup)
      allow create: if request.auth != null;
    }

    // Allow any authenticated user to read or create activity logs
    match /activity/{activityId} {
      allow read, create: if request.auth != null;
    }

    // Rules for the timesheet collection
    match /timesheet/{timesheetId} {
      // Allow authenticated users to create new timesheet entries (clock in/out)
      allow create: if request.auth != null;
      
      // Allow users to read their own individual timesheet entries
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      
      // Allow users to QUERY the timesheet collection ONLY if they are filtering by their own uid.
      allow list: if request.auth != null && request.query.resource.data.uid == request.auth.uid;
    }
    
    // Allow users to read and write to their own state document
    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
