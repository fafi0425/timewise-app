
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile data. All updates are done server-side by an admin.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false;
    }

    // A user can read and write to their own state document.
    match /userStates/{userId} {
       allow read, write: if request.auth.uid == userId;
    }

    // A user can create their own activity logs.
    match /activity/{docId} {
      allow create: if request.auth.uid == request.resource.data.uid;
      allow read, update, delete: if false;
    }

    // Any authenticated user can see the list of overbreaks and create new ones.
    match /overbreaks/{docId} {
      allow list, create: if request.auth != null;
      allow get, update, delete: if false;
    }
    
    // A user can create their own timesheet entries.
    match /timesheet/{docId} {
        allow create: if request.auth.uid == request.resource.data.uid;
        allow read, update, delete: if false;
    }
  }
}
