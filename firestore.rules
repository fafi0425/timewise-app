rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrator';
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    match /userStates/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    match /activity/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.uid || isAdmin();
    }
    
    match /timesheet/{docId} {
      allow read: if request.auth.uid == resource.data.uid || isAdmin();
      allow list: if request.auth != null && 'uid' in request.query.where && request.query.where.uid == request.auth.uid || isAdmin();
      allow write: if request.auth.uid == resource.data.uid || isAdmin();
    }
  }
}
