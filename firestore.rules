rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // A user can read/update their own profile.
    // An admin can manage all users via server-side logic (bypasses these rules).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow user creation for sign-up
      allow create: if request.auth != null;
    }
    
    // A user can only read and write their own real-time state document.
    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can only create their own activity logs.
    // Reading activity logs for other users must be done via a secure server action.
    match /activity/{activityId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    
    // Only secure server actions can write overbreaks.
    // Authenticated users can read them for real-time dashboard alerts.
    match /overbreaks/{overbreakId} {
       allow read: if request.auth != null;
    }
    
    // A user can only create their own timesheet entries.
    // Reading must be done for the logged-in user.
    match /timesheet/{entryId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
  }
}
