rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to create a new user document (on signup)
      allow create: if request.auth != null;
    }

    // Allow any authenticated user to read or create activity logs
    match /activity/{activityId} {
      allow read, create: if request.auth != null;
    }

    // Rules for the timesheet collection - only allow creation from the client.
    // Reading/querying should be done via secure server actions.
    match /timesheet/{timesheetId} {
      allow create: if request.auth != null;
      allow read, list: if false; // Disallow client-side reads
    }
    
    // Allow users to read and write to their own state document
    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
