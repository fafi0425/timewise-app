
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Private user profiles
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // User state, readable by all for dashboard, but only writable by the owner
    match /userStates/{userId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == userId;
    }
    
    // Activity logs are write-only for clients, readable by server
    match /activity/{logId} {
      allow read: if false; 
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update, delete: if false;
    }
    
    // Overbreak logs are write-only for clients, readable by server
    match /overbreaks/{logId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update, delete: if false;
    }

    // Timesheet entries are write-only for clients, readable by server
    match /timesheet/{entryId} {
      allow read: if request.auth.uid == resource.data.uid;
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update, delete: if false;
    }
  }
}
