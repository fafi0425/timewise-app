rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Any authenticated user can read the list of user states for the real-time dashboard.
    // Users can only write to their own state document.
    match /userStates/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only create activity logs for themselves.
    match /activity/{activityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    // Users can only create overbreak logs for themselves. Admin can read all.
    match /overbreaks/{overbreakId} {
       allow read: if request.auth != null; // Server-side checks handle admin role
       allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
       allow update, delete: if false;
    }
    
    // Users can only create timesheet entries for themselves. Admin can read all.
    match /timesheet/{timesheetId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
