
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/update their own data. Any authenticated user can create a user (for sign-up).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // A user can only write to their own state, but any authenticated user can read states for dashboard UIs.
    match /userStates/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can only create their own activity logs. Admins read this via server actions.
    match /activity/{activityId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, list: if request.auth != null;
    }
    
    // Any authenticated user can read the overbreaks collection for real-time alerts.
    match /overbreaks/{overbreakId} {
       allow read: if request.auth != null;
    }
    
    // A user can only create their own timesheet entries. Reads happen via secure server actions.
    match /timesheet/{entryId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
  }
}
