rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile information.
    // Writes are handled by admin/backend functions.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Disallow client-side writes
    }

    // A user can read and write to their own state document.
    // This is necessary for tracking clock-in, break, and lunch status.
    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can create their own activity logs.
    // We also allow an unauthenticated write ONLY if it is the 'Work Ended' action,
    // which happens during logout and can cause a race condition with auth state.
    match /activity/{activityId} {
      allow create: if (request.auth != null && request.auth.uid == request.resource.data.uid) || (request.resource.data.action == 'Work Ended');
      allow read, update, delete: if false;
    }

    // Authenticated users can create their own timesheet entries.
    match /timesheet/{entryId} {
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
        allow read, update, delete: if false;
    }

    // Any authenticated user can create an overbreak record.
    // Any authenticated user can read the list of overbreaks for the alerts.
    match /overbreaks/{overbreakId} {
      allow create: if request.auth != null;
      allow list, read: if request.auth != null;
      allow get, update, delete: if false;
    }
  }
}
