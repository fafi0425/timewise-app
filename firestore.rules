rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own data.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == userId; // Allow users to delete their own account data
    }

    // A user can only manage their own state.
    match /userStates/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Activity logs can be created by the user they belong to. No one can read/update them from the client.
    match /activity/{logId} {
      allow read, update, delete: if false; // Only backend can read/manage
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }
    
    // Timesheet entries can be created by the user they belong to. No one can read/update them from the client.
    match /timesheet/{entryId} {
       allow read, update, delete: if false; // Only backend can read/manage
       allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Overbreak logs can be created by the user they belong to. No one can read/update them from the client.
    match /overbreaks/{overbreakId} {
      allow read, update, delete: if false; // Only backend can read/manage
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }
  }
}
